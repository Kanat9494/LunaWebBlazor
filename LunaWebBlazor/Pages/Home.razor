@page "/"

@inject IStringLocalizer<Home> HLocalizer

<PageTitle>Home</PageTitle>

<style>
    #active-home {
        color: #3066BE !important;
    }
    #active-home img {
        filter: invert(34%) sepia(23%) saturate(4001%) hue-rotate(198deg) brightness(88%) contrast(84%);
    }

    #top-active-home {
        background: #3066BE;
    }
    #top-active-home a {
        color: white;
    }
</style>

<h1>Hello, world!</h1>

<p>@HLocalizer["FilterHeaderText"]</p>

<select>
    @for (int i = 0; i < 10; i++)
    {
        <option>@i</option>
    }
</select>

@code {

    protected override async Task OnInitializedAsync()
    {
        var shouldRender = ShouldRender();
        if (shouldRender)
            Debug.WriteLine("Repeating render");
        else
        {
            Debug.WriteLine("Not rendering");
        }

        var s = HLocalizer["HelloWorld"].Value;
    }

    protected override bool ShouldRender()
    {
        return base.ShouldRender();
    }
}
