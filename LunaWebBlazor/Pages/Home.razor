<style>
    #active-home {
        color: #3066BE !important;
    }
    #active-home img {
        filter: invert(34%) sepia(23%) saturate(4001%) hue-rotate(198deg) brightness(88%) contrast(84%);
    }

    #top-active-home {
        background: #3066BE;
    }
    #top-active-home a {
        color: white;
    }

    .brand-search-box {
        padding: 0;
    }

    .brand-search-box select.form-select {
        color: #A0A0A0;
        -webkit-appearance: none;
        -webkit-user-select: none;
        -moz-appearance: none;
        appearance: none;
        background-image: none;
        border: none;
        outline: none;
        padding-left: 10px;
        width: 100%;
        height: 36px;

        text-align: start;
        line-height: 25px;
        background-color: #E3F2FD;

        background-image: url("icons/arrow_forward.svg");
        background-position: right center; /*Positioning*/
        background-repeat: no-repeat; 
        background-size: 20px 20px, 20px 20px, 2.5em 2.5em;
    }

    .brand-search-box .select-items div, .select-selected {

    }

    .custom-input {
        background-color: #E3F2FD;
        border-radius: 5px; 
        padding: 6px; 
        border: none; 
        outline: none;
        color: #A0A0A0;
    }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none; /* Скрытие стрелок в Chrome и Safari */
        margin: 0; /* Не показывать никакого отступа */
    }

    input[type=number] {
        -moz-appearance: textfield; /* Отображение стандартного текстового поля в Firefox */
    }

    input[type="date"]::-webkit-calendar-picker-indicator {
        color: rgba(0, 0, 0, 0);
        opacity: 1;
        display: block;
        background: url("icons/calendar_icon.svg") no-repeat;
        width: 20px;
        height: 20px;
        border-width: thin;
    }

    .filter-button {
        width: 198px;
        height: 40px;
        background: #3066BE;
        color: white;
    }

    .search-button {
        width: 198px;
        height: 40px;
        background: #FF7F51;
        color: white;
    }

    .filter-button:hover {
        color: white;
    }
    .search-button:hover {
        color: white;
    }

    
</style>

<span id="topAnchor"></span>
<div class="container mobile-search mb-3 justify-content-center p-0 ">
